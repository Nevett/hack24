@model Hack24.Core.Entities.UserProfileReport

@{
	ViewBag.Title = "title";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.User.Forename @Model.User.Surname</h2>
@if (Model.Person.Badges.Any())
{
	<p>Badges:</p>
	<ul>
		@foreach (var badge in Model.Person.Badges)
		{
			<li>@Model.BadgeNames[badge]</li>
		}
	</ul>
}
else
{
	<p>No badges</p>
}

